<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ranyk.mybatis.dao.Tb2Dao">

    <resultMap id="BaseResultMap" type="com.ranyk.mybatis.entity.Tb2">
        <!--@Table tb2-->
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="course" column="course" jdbcType="VARCHAR"/>
        <result property="score" column="score" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, course, score
        from test.tb2
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, course, score
        from test.tb2
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, course, score
        from test.tb2
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="course != null and course != ''">
                and course = #{course}
            </if>
            <if test="score != null and score != ''">
                and score = #{score}
            </if>
        </where>
    </select>

    <select id="queryNullFromDual" resultType="java.lang.Object">
        select null from dual
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.tb2(name, course, score)
        values (#{name}, #{course}, #{score})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.tb2
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="course != null and course != ''">
                course = #{course},
            </if>
            <if test="score != null and score != ''">
                score = #{score},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.tb2 where id = #{id}
    </delete>

</mapper>